<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visualização em Formulário do Produto -->
    <record id="view_produto_form" model="ir.ui.view">
        <field name="name">pedidos.produto.form</field>
        <field name="model">pedidos.produto</field>
        <field name="arch" type="xml">
            <form string="Produto">
                <sheet>
                    <group>
                        <group>
                            <field name="nome_produto"/>
                            <field name="preco_unitario" widget="monetary"/>
                        </group>
                        <group>
                            <field name="pedido_id"/>
                            <field name="cliente"/>
                        </group>
                    </group>
                    <group>
                        <field name="descricao" placeholder="Digite a descrição detalhada do produto..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Visualização em Lista (List) do Produto -->
    <record id="view_produto_list" model="ir.ui.view">
        <field name="name">pedidos.produto.list</field>
        <field name="model">pedidos.produto</field>
        <field name="arch" type="xml">
            <list string="Produtos">
                <field name="nome_produto"/>
                <field name="descricao"/>
                <field name="preco_unitario" widget="monetary"/>
                <field name="pedido_id"/>
                <field name="cliente"/>
            </list>
        </field>
    </record>

    <!-- Ação para abrir a lista de produtos -->
    <record id="action_produto" model="ir.actions.act_window">
        <field name="name">Produtos</field>
        <field name="res_model">pedidos.produto</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>