<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequência para numeração automática dos pedidos -->
    <record id="sequence_pedido" model="ir.sequence">
        <field name="name">Sequência de Pedidos</field>
        <field name="code">pedidos.pedido</field>
        <field name="prefix">PED</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Visualização em Formulário do Pedido -->
    <record id="view_pedido_form" model="ir.ui.view">
        <field name="name">pedidos.pedido.form</field>
        <field name="model">pedidos.pedido</field>
        <field name="arch" type="xml">
            <form string="Pedido">
                <!-- Widget de statusbar para mostrar o fluxo de trabalho -->
                <header>
                    <button name="action_iniciar_processo" 
                            string="Iniciar Processo" 
                            type="object" 
                            class="oe_highlight"
                            invisible="status != 'aberto'"/>
                    
                    <button name="action_concluir" 
                            string="Concluir Pedido" 
                            type="object" 
                            class="oe_highlight"
                            invisible="status != 'processo'"/>
                    
                    <button name="action_cancelar" 
                            string="Cancelar" 
                            type="object"
                            invisible="status in ['cancelado', 'concluido']"/>
                    
                    <button name="action_reabrir" 
                            string="Reabrir" 
                            type="object"
                            invisible="status != 'cancelado'"/>
                    
                    <field name="status" 
                           widget="statusbar" 
                           statusbar_visible="aberto,processo,concluido"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="nome_cliente"/>
                            <field name="data_pedido"/>
                        </group>
                        <group>
                            <field name="total_produtos"/>
                            <field name="valor_total" widget="monetary"/>
                        </group>
                    </group>
                    
                    <!-- Guia separada para produtos -->
                    <notebook>
                        <page string="Produtos" name="produtos">
                            <field name="produto_ids">
                                <list editable="bottom">
                                    <field name="nome_produto"/>
                                    <field name="descricao"/>
                                    <field name="preco_unitario" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Visualização em Lista (List) do Pedido -->
    <record id="view_pedido_list" model="ir.ui.view">
        <field name="name">pedidos.pedido.list</field>
        <field name="model">pedidos.pedido</field>
        <field name="arch" type="xml">
            <list string="Pedidos">
                <field name="name"/>
                <field name="nome_cliente"/>
                <field name="data_pedido"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'concluido'"
                       decoration-info="status == 'processo'"
                       decoration-warning="status == 'aberto'"
                       decoration-danger="status == 'cancelado'"/>
                <field name="total_produtos"/>
                <field name="valor_total" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Visualização de Busca/Filtro -->
    <record id="view_pedido_search" model="ir.ui.view">
        <field name="name">pedidos.pedido.search</field>
        <field name="model">pedidos.pedido</field>
        <field name="arch" type="xml">
            <search string="Buscar Pedidos">
                <field name="name"/>
                <field name="nome_cliente"/>
                <field name="data_pedido"/>
                
                <filter string="Abertos" name="abertos" 
                        domain="[('status', '=', 'aberto')]"/>
                <filter string="Em Processo" name="processo" 
                        domain="[('status', '=', 'processo')]"/>
                <filter string="Concluídos" name="concluidos" 
                        domain="[('status', '=', 'concluido')]"/>
                <filter string="Cancelados" name="cancelados" 
                        domain="[('status', '=', 'cancelado')]"/>
                
                <separator/>
                
                <filter string="Pedidos de Hoje" name="hoje"
                        domain="[('data_pedido', '=', context_today().strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Status" name="group_status" 
                            context="{'group_by': 'status'}"/>
                    <filter string="Cliente" name="group_cliente" 
                            context="{'group_by': 'nome_cliente'}"/>
                    <filter string="Data do Pedido" name="group_data" 
                            context="{'group_by': 'data_pedido'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para abrir a lista de pedidos -->
    <record id="action_pedido" model="ir.actions.act_window">
        <field name="name">Pedidos</field>
        <field name="res_model">pedidos.pedido</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Criar o primeiro pedido
            </p>
            <p>
                Clique no botão "Novo" para criar um novo pedido de cliente.
            </p>
        </field>
    </record>
</odoo>